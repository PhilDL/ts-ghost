{
  "name": "@ts-ghost/ghost-blog-buster",
  "author": "Philippe L'ATTENTION <https://github.com/PhilDL>",
  "license": "MIT",
  "access": "public",
  "private": false,
  "type": "module",
  "description": "Elegant interactive CLI to export your Ghost Blog Content to a static website, format in Markdown, JSON...",
  "repository": {
    "type": "git",
    "url": "https://github.com/PhilDL/ts-ghost/tree/main/apps/ghost-blog-buster"
  },
  "version": "0.7.0",
  "main": "./dist/cli.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/cli.js"
  },
  "bin": {
    "ghost-blog-buster": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "jiti ./src/cli.ts",
    "dev": "tsup --watch",
    "build": "tsup ./src/cli.ts --format esm --dts",
    "clean": "rimraf .turbo node_modules dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test-ci": "vitest run --coverage.enabled --coverage.reporter='text-summary'",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint ./src --fix",
    "typecheck": "tsc --project ./tsconfig.json --noEmit"
  },
  "devDependencies": {
    "@ts-ghost/admin-api": "workspace:*",
    "@ts-ghost/content-api": "workspace:*",
    "@ts-ghost/tsconfig": "workspace:*",
    "@types/configstore": "^6.0.2",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "catalog:",
    "@types/yargs": "^17.0.32",
    "eslint": "catalog:eslint",
    "jiti": "^2.0.0",
    "ts-node": "^10.9.2",
    "tsup": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vite-tsconfig-paths": "catalog:",
    "vitest": "catalog:"
  },
  "dependencies": {
    "@clack/core": "^0.5.0",
    "@clack/prompts": "^0.11.0",
    "@ts-ghost/admin-api": "^4.3.0",
    "@ts-ghost/content-api": "^4.2.0",
    "configstore": "^7.0.0",
    "js-yaml": "^4.1.0",
    "node-html-markdown": "^1.3.0",
    "picocolors": "^1.0.0",
    "yargs": "^17.7.2",
    "zod": "3.23.8"
  },
  "publishConfig": {
    "access": "public"
  }
}
